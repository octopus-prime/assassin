using testing ;

project assassin
	:
		requirements
		<include>source
		<cxxflags>-std=c++14
		<cxxflags>-mavx2
#		<cxxflags>-msse4.1
		<define>BOOST_ALL_DYN_LINK
	;

exe assassin
	:
		[ glob source/*.cpp ]
		/site-config//tbb
		/site-config//pthread
	;

unit-test assassin-test
	:
		[ glob test/*.cpp ]
		/site-config//boost_unit_test_framework
	;
