using testing ;

project assassin
	:
		requirements
		<include>source
		<define>BOOST_ALL_DYN_LINK
	;

obj hash : source/hash.cpp ;
obj move : source/move.cpp ;

exe assassin
	:
		hash
		move
		source/engine.cpp
		/site-config//tbb
		/site-config//pthread
	;

unit-test assassin-test
	:
		hash
		move
		[ glob test/*.cpp ]
		[ glob test/attacker/*.cpp ]
		/site-config//boost_unit_test_framework
	;
